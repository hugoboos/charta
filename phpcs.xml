<?xml version="1.0"?>
<ruleset name="BoosBoos">
  <descrpition>The BoosBoos coding standard.</descrpition>

  <file>src/</file>

  <arg value="p"/>
  <arg name="colors"/>
  <arg name="tab-width" value="2"/>

  <rule ref="PSR2"/>

  <rule ref="Generic.WhiteSpace.ScopeIndent">
    <properties>
      <property name="indent" value="2"/>
    </properties>
  </rule>

  <rule ref="PSR2.Methods.FunctionCallSignature">
    <properties>
      <property name="indent" value="2"/>
    </properties>
  </rule>

  <rule ref="Squiz.Functions.MultiLineFunctionDeclaration">
    <properties>
      <property name="indent" value="2"/>
    </properties>
  </rule>

</ruleset>
